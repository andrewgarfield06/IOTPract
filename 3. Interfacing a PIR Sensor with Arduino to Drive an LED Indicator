int pirPin = 2;       // PIR output pin
int ledPin = 13;      // LED indicator

void setup() {
  pinMode(pirPin, INPUT);
  pinMode(ledPin, OUTPUT);
}

void loop() {
  int motion = digitalRead(pirPin);

  if (motion == HIGH) {
    digitalWrite(ledPin, HIGH);  // Turn LED ON when motion sensed
  } else {
    digitalWrite(ledPin, LOW);   // Turn LED OFF when no motion
  }
}
