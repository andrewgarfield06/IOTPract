const int buttonPin = 2;     // Button input pin
const int ledPin = 13;       // LED pin

void setup() {
  pinMode(buttonPin, INPUT);  // Read button
  pinMode(ledPin, OUTPUT);    // Control LED
}

void loop() {
  int buttonState = digitalRead(buttonPin);

  if (buttonState == HIGH) {  
    // Button pressed → Blink LED
    digitalWrite(ledPin, HIGH);
    delay(300);
    digitalWrite(ledPin, LOW);
    delay(300);
  } else {
    // Button not pressed → LED OFF
    digitalWrite(ledPin, LOW);
  }
}
