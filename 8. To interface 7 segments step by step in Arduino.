// Single 7-segment (common-cathode) display example
const uint8_t segPins[8] = {2,3,4,5,6,7,8,9}; // a,b,c,d,e,f,g,dp

// 7-seg digits 0-9 bitmaps (a b c d e f g), dp is separate
// bit order: gfedcba  (we will map bit 0 -> a, bit1->b ... bit6->g)
const uint8_t digits[10] = {
  0b00111111, // 0 -> a b c d e f
  0b00000110, // 1 -> b c
  0b01011011, // 2 -> a b d e g
  0b01001111, // 3 -> a b c d g
  0b01100110, // 4 -> b c f g
  0b01101101, // 5 -> a c d f g
  0b01111101, // 6 -> a c d e f g
  0b00000111, // 7 -> a b c
  0b01111111, // 8 -> all
  0b01101111  // 9 -> a b c d f g
};

void setup() {
  for (int i=0;i<8;i++) pinMode(segPins[i], OUTPUT);
  clearDisplay();
}

void loop() {
  for (int n=0;n<=9;n++) {
    showDigit(n, false); // show number without decimal point
    delay(800);
  }
}

// Show a digit (0-9). dp=true lights decimal point.
void showDigit(int num, bool dp) {
  uint8_t bits = digits[num];
  for (int i=0;i<7;i++) {
    bool on = bits & (1 << i);
    digitalWrite(segPins[i], on ? HIGH : LOW); // CC -> HIGH lights segment
  }
  // decimal point (pin 7 index = 7)
  digitalWrite(segPins[7], dp ? HIGH : LOW);
}

void clearDisplay() {
  for (int i=0;i<8;i++) digitalWrite(segPins[i], LOW);
}
